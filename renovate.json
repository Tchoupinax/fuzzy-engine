{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    "config:recommended",
    "group:allNonMajor"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "mode": "full",
  "prConcurrentLimit": 20,
  "prHourlyLimit": 10,
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
